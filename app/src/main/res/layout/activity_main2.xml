<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shubham.tic_tac_toe.Main2Activity"
    android:background="@drawable/download">

    <EditText
        android:id="@+id/playerx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/playero"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp"
        android:ems="10"
        android:hint="PlayerX"
        android:inputType="textPersonName"
        android:maxLength="8"
        android:selectAllOnFocus="false"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/playero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startGame"
        android:layout_alignLeft="@+id/playerx"
        android:layout_marginBottom="59dp"
        android:contextClickable="false"
        android:ems="10"
        android:hint="PlayerO"
        android:inputType="textPersonName"
        android:maxLength="8"
        android:soundEffectsEnabled="false"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Start Game"
        android:id="@+id/startGame"
        android:onClick="clickedStart"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="111dp"
        android:background="@drawable/button"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name of Player1 (X coin)"
        android:id="@+id/textView"
        android:layout_above="@+id/playerx"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name of Player2 (O coin)"
        android:id="@+id/textView2"
        android:layout_above="@+id/playero"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:textColor="#ffffff" />
</RelativeLayout>